{
  "name": "esnext-scripts",
  "version": "0.32.2",
  "description": "Opinionated ESNext application scripts and configurations",
  "main": "bin/cli.js",
  "repository": "https://github.com/jimzhan/esnext-scripts",
  "author": "Jim Zhan <jim.zhan@me.com>",
  "license": "MIT",
  "bin": {
    "esnext": "./bin/esnext.js",
    "esnext-scripts": "./bin/esnext.js"
  },
  "scripts": {
    "precommit": "lint-staged",
    "prepush": "yarn test && npx standard-version --no-verify",
    "commit": "git-cz",
    "commitmsg": "commitlint --env GIT_PARAMS",
    "release": "git push --follow-tags origin master && npm publish --verbose",
    "lint": "cross-env DEBUG=esnext-scripts ./bin/esnext.js lint",
    "test": "cross-env DEBUG=esnext-scripts ./bin/esnext.js test"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx}": [
      "eslint --fix"
    ]
  },
  "jest": {
    "collectCoverage": false,
    "collectCoverageFrom": [
      "tasks/**/*.{js}",
      "!tasks/jest.js",
      "!tasks/lint.js",
      "!**/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "resolutions": {
    "gkt": "1.0.0"
  },
  "dependencies": {
    "assert": "^1.4.1",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.6",
    "babel-jest": "^23.4.2",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-1": "^6.24.1",
    "babel-register": "^6.26.0",
    "cross-env": "^5.2.0",
    "debug": "^3.1.0",
    "dotenv": "^6.0.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^5.6.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-config-standard-react": "^7.0.2",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-react": "^7.11.1",
    "eslint-plugin-standard": "^4.0.0",
    "esm": "^3.0.76",
    "execa": "^0.10.0",
    "gkt": "1.0.0",
    "jest-cli": "^23.5.0",
    "koa": "^2.5.2",
    "log-symbols": "^2.2.0",
    "node-plop": "^0.16.0",
    "nodemon": "^1.18.3",
    "ora": "^3.0.0",
    "pm2": "^3.0.3",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "uid-safe": "^2.1.5",
    "yargs": "^12.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.0.0",
    "@commitlint/config-conventional": "^7.0.1",
    "commitizen": "^2.10.1",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.0",
    "standard-version": "^4.4.0"
  },
  "keywords": [
    "zero-configuration",
    "build",
    "build-tools",
    "esnext",
    "es2015",
    "es2016",
    "es2017",
    "boilerplate",
    "generator",
    "application",
    "esm",
    "app",
    "docker",
    "nginx",
    "pm2",
    "docker-compose",
    "jest",
    "react",
    "enzyme",
    "eslint",
    "skeleton",
    "template",
    "test",
    "lint"
  ]
}
